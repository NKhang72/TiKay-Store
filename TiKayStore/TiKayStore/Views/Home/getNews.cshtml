@model IEnumerable<TiKayStore.Models.tb_News>

<div class="row blogs_container">
    @foreach (var i in Model)
    {
        <div class="col-lg-4 blog_item_col">
            <div class="blog_item">
                <div class="blog_background" style="background-image:url(@i.Image)"></div>
                <div class="blog_content d-flex flex-column align-items-center justify-content-center text-center">
                    <h4 class="blog_title">@i.Title</h4>
                    <span class="blog_meta">@i.CreateBy | @i.CreateDate</span>
                    @Html.ActionLink("Read More", "getNewsbyId", "News", new { @id = i.id }, null)
                </div>
            </div>
        </div>
    }
</div>



