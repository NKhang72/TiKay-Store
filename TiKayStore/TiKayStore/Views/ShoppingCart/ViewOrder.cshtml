@model  TiKayStore.Models.tb_Order

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container " style="margin-left=0px">
    <form class="needs-validation" action="" name="frmthanhtoan"
          method="POST">
        <input type="hidden" name="kh_tendangnhap" value="dnpcuong">

        <div class="py-5 text-center">
            <i class="fa fa-credit-card fa-4x" aria-hidden="true"></i>
            <h2>Thanh toán</h2>
            <p class="lead">
                Vui lòng kiểm tra thông tin Khách hàng, thông
                tin Giỏ hàng trước khi Đặt hàng.
            </p>
        </div>

        <div class="row">
            <div class="col-md-4 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Giỏ hàng</span> <span class="badge badge-secondary badge-pill"></span>
                </h4>
                <ul class="list-group mb-3">
                    @foreach (var i in Model.tb_OrderDetail)
                    {
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0">
                                    @i.tb_Product.Title
                                </h6>
                                <small class="text-muted">@i.Price * @i.Quantity</small>
                            </div>

                        </li>
                    }


                    <li class="list-group-item d-flex justify-content-between">
                        <span>Tổng thành tiền</span> <strong>@Model.TotalAmount</strong>
                    </li>
                </ul>


            </div>
            <div class="col-md-8 order-md-1">
                <h4 class="mb-3">Thông tin khách hàng</h4>

                <div class="row">
                    <div class="col-md-12">
                        <label for="kh_ten">Họ tên</label>
                        <div class="form-control">@Model.CustomerName</div>

                    </div>

                    <div class="col-md-12">
                        <label for="kh_dt">Điện thoại</label>
                        <div class="form-control">@Model.Phone</div>
                    </div>
                    <div class="col-md-12">
                        <label for="kh_diachi">Địa chỉ</label>
                        <div class="form-control">@Model.Address</div>
                    </div>
                    <div class="col-md-12">
                        <label for="kh_diachi">Email</label>
                        <div class="form-control">@Model.Email</div>
                    </div>
                    <div class="col-md-12">
                        <label for="kh_diachi">Thanh Toán</label>
                        <div class="form-control">@(Model.TypePay == "1" ? "COD" : "Chuyển khoảng")</div>
                    </div>
                    <div class="col-md-12">
                        <label for="kh_diachi">Trạng Thái</label>
                        <div class="form-control">@(Model.TypePay == "1" ? "Chưa thanh toán" : "Đã thanh toán")</div>
                    </div>

                </div>

                <div class="d-block my-3">

                    <hr class="mb-4">
                    <div class="btn btn-light btn-lg btn-block">@Html.ActionLink("Home", "Index", "Home")</div>
                </div>
            </div>
    </form>

</div>

