@model TiKayStore.Models.tb_Order
@{
    ViewBag.Title = "Thanh toán";
}



<!-- Block content - Đục lỗ trên giao diện bố cục chung, đặt tên là `content` -->
<div class="container ">
    <form class="needs-validation" action="" name="frmthanhtoan"
          method="POST">
        <input type="hidden" name="kh_tendangnhap" value="dnpcuong">

        <div class="py-5 text-center">
            <i class="fa fa-credit-card fa-4x" aria-hidden="true"></i>
            <h2>Thanh toán</h2>
            <p class="lead">
                Vui lòng kiểm tra thông tin Khách hàng, thông
                tin Giỏ hàng trước khi Đặt hàng.
            </p>
        </div>

        <div class="row">
            <div class="col-md-4 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Giỏ hàng</span> <span class="badge badge-secondary badge-pill"></span>
                </h4>
                @Html.Action("Item_ThanhToan", "ShoppingCart")

            </div>
            @using (Html.BeginForm("AddOder", "ShoppingCart", FormMethod.Post, new { }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="col-md-8 order-md-1">
                    <h4 class="mb-3">Thông tin khách hàng</h4>

                    <div class="row">
                        <div class="col-md-12">
                            <label>Họ tên khách hàng</label>
                            @Html.TextBoxFor(x => x.CustomerName, new { @class = "form-control", @placeholder = "Vui lòng nhập tên" })
                            @Html.ValidationMessageFor(x => x.CustomerName, null, new { @class = "text-danger" })
                        </div>

                        <div class="col-md-12">
                            <label>Số điện thoại</label>
                            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @placeholder = "Vui lòng nhập số điện thoại" })
                            @Html.ValidationMessageFor(x => x.Phone, null, new { @class = "text-danger" })
                        </div>
                        <div class="col-md-12">
                            <label>Địa chỉ</label>
                            @Html.TextBoxFor(x => x.Address, new { @class = "form-control", @placeholder = "Vui lòng nhập địa chỉ" })
                            @Html.ValidationMessageFor(x => x.Address, null, new { @class = "text-danger" })
                        </div>
                        <div class="col-md-12">
                            <label>Email</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Vui lòng nhập email" })
                            @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger" })
                        </div>

                    </div>



                    <div class="d-block my-3">
                        <div class="form-group">
                            <label>Hình thức thanh toán</label>
                            @Html.DropDownListFor(x => x.TypePay, ViewBag.Payment as SelectList, "-Chọn phương thức thanh toán-", new { @class = "form-control", @placeholder = "Phương thức thanh toán" })

                        </div>

                        <hr class="mb-4">
                        <button class="btn btn-primary btn-lg btn-block" type="submit"
                                name="btnDatHang">
                            Đặt hàng
                        </button>
                    </div>
                </div>
            }
    </form>

</div>
<!-- End block content -->
