@model TiKayStore.Models.tb_Menu
@{
    ViewBag.Title = "Thêm Menu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Menu</a>
        </li>
    </ul>
}
<!-- Content Wrapper. Contains page content -->
<div class="content">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Quản lý menu</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Menu</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card-body">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Thêm mới menu</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                @using (Html.BeginForm("Add", "Menu", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <form>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exampleInputTilte">Tên menu</label>
                                @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Nhập tên menu" })
                                @Html.ValidationMessageFor(x => x.Title, null, new { @class = " text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTilte">Mô tả menu</label>
                                @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @placeholder = "Nhập mô tả menu" })
                                @Html.ValidationMessageFor(x => x.Description, null, new { @class = " text-danger" })
                            
                            </div>
                            <div class="form-group">

                                <label>Hiển thị </label>
                                @Html.CheckBox("CheckBoxId", false)
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <a href="/Admin/Menu" class="btn btn-danger"> Quay lại</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                }

            </div>
        </div>
    </section>
</div>
