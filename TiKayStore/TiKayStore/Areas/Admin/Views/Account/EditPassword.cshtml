@model TiKayStore.Areas.Admin.Model.EditPasswordModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>

    </ul>
}
<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Cập nhật thông tin</p>
                                @using (Html.BeginForm("EditPassword", "Account", FormMethod.Post, new { @class = "mx-1 mx-md-4" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)

                                    <div class="d-flex flex-row align-items-baseline  mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            @Html.PasswordFor(x => x.passwordOld, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.passwordOld, null, new { @class = "text-danger", @placeholder = "Vui lòng nhập mật khẩu cũ" })
                                            <label class="form-label" for="form3Example4c">Nhập mật khẩu cũ</label>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-baseline  mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            @Html.PasswordFor(x => x.passwordNew, new { @class = "form-control", placeholder = "Vui lòng mật khẩu mới" })
                                            @Html.ValidationMessageFor(x => x.passwordNew, null, new { @class = "text-danger", @placeholder = "Vui lòng nhập mật khẩu mới" })
                                            <label class="form-label" for="form3Example4c">Nhập mật khẩu mới</label>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-baseline  mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            @Html.PasswordFor(x => x.passwordConfirm, new { @class = "form-control", placeholder = "Vui lòng nhập lại mật khẩu mới" })
                                            @Html.ValidationMessageFor(x => x.passwordConfirm, null, new { @class = "text-danger", @placeholder = "Vui lòng nhập lại mật khẩu mới" })
                                            <label class="form-label" for="form3Example4c">Xác minh mật khẩu</label>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Xác nhận</button>
                                    </div>


                                }


                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                     class="img-fluid" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>