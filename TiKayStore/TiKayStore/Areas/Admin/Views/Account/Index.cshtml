@model TiKayStore.Models.UserLogin
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>

    </ul>
}

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card" style="height:1000px">
        <div class="card-header">

        </div>
        <div class="card-body">
            <section class="vh-100 gradient-custom">
                <div class="container py-5 h-100">
                    <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                            <div class=" bg-dark text-white" style="border-radius: 1rem;">
                                <div class="card-body p-5 text-center">

                                    <div class="mb-md-5 mt-md-4 pb-5">

                                        <h2 class="fw-bold mb-2 text-uppercase">Thông tin</h2>
                                        <p class="text-white-50 mb-5">TECHx store!</p>

                                        <div class="text-center">
                                            <img style="width:200px;height:200px" class="profile-user-img img-fluid img-circle "
                                                 src="@Model.Image"
                                                 alt="User profile picture">
                                        </div>

                                        <h3 class="profile-username text-center">@Model.LastName @Model.FirstName</h3>

                                        <p class="text-muted text-center">Admin</p>

                                        <a class="btn btn-outline-light btn-lg px-5 " style="margin-bottom: 15px; " href="/admin/account/edit/@Model.UserId">Thay đổi thông tin </a>
                                        <a class="btn btn-outline-light btn-lg px-5" href="/admin/account/editPassword/@Model.UserId">Thay đổi Mật khẩu </a>

                                        <div class="d-flex justify-content-center text-center mt-4 pt-1">
                                            <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                                            <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                                            <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
                                        </div>


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
